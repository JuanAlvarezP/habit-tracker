# Ejemplo de variables de entorno para ejecución local / Jenkins
DEBUG=True
SECRET_KEY=CHANGEME
ALLOWED_HOSTS=127.0.0.1,localhost
DATABASE_URL=sqlite:///db.sqlite3

# Si usas almacenamiento de archivos en producción, añade configuración aquí
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
# Variables de entorno para Django en Railway
SECRET_KEY=your-secure-key-here
DEBUG=False
ALLOWED_HOSTS=.railway.app,localhost,127.0.0.1

# Configuración de Base de Datos
# Railway provee automáticamente DATABASE_URL para PostgreSQL

# Configuración de CORS
CORS_ALLOWED_ORIGINS=https://your-frontend-url.railway.app

# Configuración para archivos estáticos
STATIC_URL=/static/
STATIC_ROOT=staticfiles

# Configuración de seguridad
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True